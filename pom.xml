<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.gengine</groupId>
    <artifactId>gengine-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    
    <organization>
        <name>ChenInfo Software</name>
        <url>http://www.cheninfo.org/</url>
    </organization>
    <licenses>
        <license>
            <name>${maven.license.name}</name>
            <url>${maven.license.url}</url>
        </license>
    </licenses>
    <scm>
        <connection>${maven.scm.connection}</connection>
        <developerConnection>${maven.scm.developerConnection}</developerConnection>
        <url>${maven.scm.url}</url>
    </scm>
    
    <properties>
        <maven.license.name>GNU Lesser General Public License v3.0 or later</maven.license.name>
        <maven.license.url>http://www.gnu.org/licenses/lgpl-3.0-standalone.html</maven.license.url>
        <maven.scm.connection>scm:git:https://github.com/ChenInfo/gengine.git</maven.scm.connection>
        <maven.scm.developerConnection>scm:git:git@github.com:ChenInfo/gengine.git</maven.scm.developerConnection>
        <maven.scm.url>https://github.com/ChenInfo/gengine</maven.scm.url>
        <maven.repository.url>https://artifacts.cheninfo.com/nexus/content/groups/public</maven.repository.url>
        <maven.compile.source>1.7</maven.compile.source>
        <maven.compile.target>1.7</maven.compile.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        
        <dependency.junit.version>4.10</dependency.junit.version>
        <dependency.log4j.version>1.2.17</dependency.log4j.version>
    </properties>

    <modules>
        <module>gengine-commons</module>
        <module>gengine-messaging-commons</module>
        <module>gengine-commons-s3</module>
        <module>gengine-health-commons</module>
        <module>gengine-transform-commons</module>
        <module>gengine-transform-messaging</module>
        <module>gengine-hash-commons</module>
        <module>gengine-hash-messaging</module>
        <module>gengine-messaging-amqp-direct</module>
        <module>gengine-messaging-camel</module>
        <module>gengine-transform-node-commons</module>
        <module>gengine-transform-worker-ffmpeg</module>
        <module>gengine-transform-node-ffmpeg</module>
        <module>gengine-hash-node-commons</module>
        <module>gengine-hash-worker-javase</module>
        <module>gengine-hash-node-javase</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${dependency.junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>${dependency.log4j.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <repositories>
        <repository>
            <id>apache.snapshots</id>
            <url>http://repository.apache.org/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </snapshots>
        </repository>
        <repository>
            <id>cheninfo-public-snapshots</id>
            <url>https://artifacts.cheninfo.com/nexus/content/groups/public-snapshots</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </snapshots>
        </repository>
        <repository>
            <id>cheninfo-public</id>
            <url>https://artifacts.cheninfo.com/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${maven.compile.source}</source>
                    <target>${maven.compile.target}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
